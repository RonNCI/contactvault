<div class="container mt-4">
  <div class="row">
    <!-- quick stats -->
    <div class="col-md-4 mb-4">
      <div class="card border-primary h-100">
        <div class="card-body">
          <h5 class="card-title"><i class="bi bi-graph-up"></i> Quick Stats</h5>
          <div class="list-group list-group-flush">
            <div class="list-group-item d-flex justify-content-between">
              <span>Total Contacts</span>
              <span class="badge bg-primary rounded-pill">0</span>
            </div>
            <div class="list-group-item d-flex justify-content-between">
              <span>Groups</span>
              <span class="badge bg-primary rounded-pill">0</span>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- recent activity -->
    <div class="col-md-8 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><i class="bi bi-clock-history"></i> Recent Activity</h5>
          <div class="list-group list-group-flush">
            <div class="list-group-item text-center text-muted">
              <p class="mb-0">Welcome to your Contactvault dashboard!</p>
              <small>Start by adding your first contact</small>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- quick actions -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><i class="bi bi-lightning"></i> Quick Actions</h5>
          <div class="d-flex gap-2">
            <%= link_to new_contact_path, class: "btn btn-primary" do %>
              <i class="bi bi-person-plus"></i> Add Contact
            <% end %>
          </div>
        </div>
      </div>
    </div>
