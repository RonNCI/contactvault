<!-- container for login form -->
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <!-- login card -->
      <div class="card">
        <div class="card-header text-center">
          <h2>Welcome to Contactvault</h2>
        </div>
        <!-- login form -->
        <div class="card-body">
          <%= form_for(:session, url: login_path) do |f| %>
            <!-- email field -->
            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control", placeholder: "Enter your email" %>
            </div>

            <!-- password field -->
            <div class="mb-3">
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control", placeholder: "Enter your password" %>
            </div>

            <!-- submit button -->
            <div class="d-grid">
              <%= f.submit "Login to Contactvault", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- flash messages -->
      <% if flash.any? %>
        <div class="mt-3">
          <% flash.each do |name, msg| %>
            <div class="alert <%= name == 'notice' ? 'alert-success' : 'alert-danger' %> alert-dismissible fade show">
              <%= msg %>
              <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="mt-3 text-center">
  <p>New to Contactvault? <%= link_to "Create an account", new_vault_user_path %></p>
</div>
